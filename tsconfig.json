{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        { "path": "../../.." }
    ]
}
